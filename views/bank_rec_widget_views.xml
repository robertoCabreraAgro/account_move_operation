<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="view_bank_rec_widget_form" model="ir.ui.view">
        <field name="name">bank.rec.widget.form</field>
        <field name="model">bank.rec.widget</field>
        <field name="inherit_id" ref="account_accountant.view_bank_rec_widget_form" />
        <field name="priority">100</field>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_set_as_checked']" position="after">
                <button
                    name="button_operation"
                    string="Operation"
                    type="object"
                    class="btn btn-secondary"
                    accesskey="o"
                />
            </xpath>
        </field>
    </record>
</odoo>
