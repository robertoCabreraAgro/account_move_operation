<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form_inherit_account_move_operation" model="ir.ui.view">
        <field name="name">account.move.form.inherit.account.move.operation</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_draft']" position="before">
                <button 
                    name="action_create_operation_from_move" 
                    string="Create/Continue Operation" 
                    type="object" 
                    groups="account.group_account_user"
                />
            </xpath>
        </field>
    </record>
</odoo> 